{{#each options}}
<li class="tree-item control" {{#instance}}{{ data 'option' }}{{/instance}} data-id="{{ instance.id }}">
    <div class="item-main">
      <div class="simple-link">
        <div class="row-fluid">
          <div class="span8">
            <div class="item-data">
              <div class="tree-title-area">
                {{instance.title}}
                <span class="url-link">
                  {{instance.link}}
                </span>
              </div>
            </div>
          </div>
          <div class="span3">
            <div class="item-data no-space">
              <div class="tree-title-area" rel="tooltip" data-placement="top" data-original-title="{{instance.slug}}">
                <span class="code-info">{{instance.slug}}</span>
              </div>
            </div>
          </div>
          <div class="span1">
            {{#if mappings.length}}
              {{#result_direct_mappings bindings_compute selected_object}}
              <span class="mapped" rel="tooltip" data-placement="top" data-original-title="Mapped">
                <i class="fa fa-check-square-o"></i>
              </span>
              <!--span class="mapped mapped-ext pull-right" data-popover-trigger="sticky-hover" data-sticky-popover="true" href="javascript://" target="_blank">
                <div class='popover-data-title'>
                  <b>{{instance.title}}</b> {{instance.class.title_singular}} is mapped through:
                </div>
                <div class='popover-data-content'>
                  {{{render '/static/mustache/selectors/multitype_option_mappings_popover.mustache' result=. parent_instance=selected_object}}}
                </div>
                Mapped ({{mappings_type}})
              </span-->
              {{/result_direct_mappings}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </li>
{{/each}}
