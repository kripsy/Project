<div class="row-fluid inner-hide">
  <div class="span12 hidable">
    {{#using contact=instance.contact}}
    <label>
      Primary Contact
      <i class="fa fa-question-circle" rel="tooltip" title="Point of contact for this object"></i>
      <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
    </label>
    <input data-test-id="new_program_field_primary_contact_86160053"
           data-id="contact_txtbx"
           tabindex="5"
           class="input-block-level" name="contact.email" data-lookup="Person" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
    {{/using}}
  </div>
</div>
