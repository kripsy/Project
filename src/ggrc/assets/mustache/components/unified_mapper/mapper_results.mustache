<div class="filter-actions wrap-modal-spacing">
  <div class="row-fluid">
    <div class="span12">
      <a class="btn btn-small btn-info pull-right modalSearchButton {{#inProgress}}disabled{{/inProgress}}" href="javascript://">
        Search
      </a>
    </div>
  </div>
</div>
<div class="results modal-custom-spacing">
  <div class="results-num">
    <div class="row-fluid">
      <div class="span9">
        <strong>
          {{ entries.length }} Objects found
        </strong>
      </div>
      <div class="span3">
        {{^if mapper.search_only}}
        <div class="pull-right check-all">
          <spinner toggle="is_loading"></spinner>
          Select:
            <a
              href="#"
              class="object-uncheck-all {{#inProgress}}disabled{{/inProgress}}"
              can-click="unselectAll"
              >None</a>,
            <a
              href="#"
              can-click="selectAll"
              class="object-check-all {{#allSelected}}disabled{{/allSelected}}"
              rel="tooltip"
              data-placement="right"
              data-original-title="Processing more than 100 items may take long time. Please consider refining your search criteria."
              >All</a>
          </label>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="results-wrap">
    <ul class="result-tree tree-structure new-tree">
      {{#if mapper.search_only}}
        {{> /static/mustache/search/advanced_search_option_items.mustache}}
      {{else}}
        {{> /static/mustache/selectors/object_selector_option_items.mustache}}
      {{/if}}
    </ul>
    <div class="row-fluid centered clearfix">
      <spinner size="large" toggle="page_loading"></spinner>
    </div>
  </div>
</div>
