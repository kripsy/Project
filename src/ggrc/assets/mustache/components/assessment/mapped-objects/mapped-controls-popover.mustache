<!-- Objectives and Regulations Grids -->
<collapsible-panel title-text="Show Related Objectives and Regulations" collapsed="true" expanded="expanded"
                   extra-css-class="no-padding">
    <div class="grid-data-simple">
        <!-- Header -->
        <div class="grid-data-header flex-box flex-box-single flex-row">
            <div class="flex-size-1">
                <i class="fa fa-objective color"></i>
                Objectives ({{objectives.length}})
            </div>
            <div class="flex-size-1">
                <i class="fa fa-regulation color"></i>
                Regulations ({{regulations.length}})
            </div>
        </div>
        <!-- Sub Header -->
        <div class="grid-data-sub-header flex-box flex-box-single flex-row">
            <div class="flex-box flex-row flex-box-single flex-size-1">
                <div class="flex-size-5">
                    Objective Description
                </div>
                <div class="flex-size-3">
                    Notes
                </div>
            </div>
            <div class="flex-box flex-row flex-box-single flex-size-1">
                <div class="flex-size-5">
                    Regulation Description
                </div>
                <div class="flex-size-3">
                    Notes
                </div>
            </div>
        </div>
      <!-- Body -->
        <div class="grid-data-body flex-box flex-box-single flex-row {{#isLoading}}loading{{/isLoading}}">
            <spinner toggle="isLoading" extra-css-class="grid-spinner"
                     class="spinner-wrapper {{#isLoading}}active{{/isLoading}}"></spinner>
            <object-list items="objectives" class="flex-size-1">
                <div class="grid-data-row flex-box flex-row flex-box-single">
                    <div class="flex-box flex-row flex-box-single flex-size-1">
                        <div class="flex-size-5 flex-size-limit">
                            <div class="title-text">
                              {{title}}
                            </div>
                            <read-more text="description"></read-more>
                        </div>
                        <read-more text="notes" class="flex-size-3 flex-size-limit"></read-more>
                    </div>
                </div>
            </object-list>
            <object-list items="regulations" class="flex-size-1">
                <div class="grid-data-row flex-box flex-row flex-box-single">
                    <div class="flex-box flex-row flex-box-single flex-size-1">
                        <div class="flex-size-5 flex-size-limit">
                            <div class="title-text">
                              {{title}}
                            </div>
                            <read-more text="description"></read-more>
                        </div>
                        <read-more text="notes" class="flex-size-3 flex-size-limit"></read-more>
                    </div>
                </div>
            </object-list>
        </div>
    </div>
</collapsible-panel>
