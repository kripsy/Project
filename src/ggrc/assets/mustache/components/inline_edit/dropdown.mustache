{{#if context.isEdit}}
  <dropdown
    options-list="context.values"
    name="context.value"
    no-value="true"
    class-name="input-medium"
    ></dropdown>
{{else}}
  <p class="inline-edit__value">
    {{{firstnonempty context.value '<span class="empty-message">None</span>'}}}
  </p>
{{/if}}
