<div class="selector-info">
  <h4>
    <i class="fa fa-person"></i>
    Related References ({{joins.length}})
  </h4>
  <ul class="linked-people">
    {{#joins}}
    <li class="{{#if _removed}}removed{{/if}}">
      <a class="jump-to-control" href="javascript://">
        <span>
          {{ firstnonempty document.title document.link }}
        </span>
      </a>
    </li>
    {{/joins}}
  </ul>
</div>
