{{!<div class="modal-body">}}
  <div class="help">
  <div class="help-content rtf">
      {{{firstnonempty instance.content '<p>This content is coming soon.  We are working on it.</p>'}}}
  </div>


  {{#allow_help_edit}}
    <div id="helpedit" class="collapse {{#edit_btn_active}}in{{/edit_btn_active}}">
      {{#instance}}
      <div class="row-fluid">
        <div class="well">     
          <label for="help_help_title">Help title</label>
          <input tabindex="1" class="span12" id="help_title" name="title" size="30" type="text" value="{{title}}" autofocus>
          <label for="help_help_content">Help content</label>
          <div class="wysiwyg-area">
            <textarea tabindex="2" class="span12 double wysihtml5 rtftextarea" id="help_content" name="content" rows="8">{{{content}}}</textarea>
          </div>
          <div class="row-fluid">
            <div class="span12">
              <input tabindex="3" class="btn btn-warning pull-right" name="commit" type="submit" value="Save">
            </div>
          </div>
          <input id="help_slug" name="slug" type="hidden" value="{{slug}}">

        </div>
      </div>
      {{/instance}}
    </div>
  {{/allow_help_edit}}
  </div> 
{{!</div>}}
