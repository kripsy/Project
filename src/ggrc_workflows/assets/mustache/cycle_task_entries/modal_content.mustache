<form action="javascript://">
  <div class="row-fluid">
    <div class="span12">
      <input id="task_id" name="cycle_task_group_object_task" type="hidden" model="CycleTaskGroupObjectTask" value="{{firstnonempty instance.cycle_task_group_object_task.id object_params.cycle_task_group_object_task}}">
      <input id="cycle_id" name="cycle" type="hidden" model="Cycle" value="{{firstnonempty instance.cycle.id object_params.cycle}}">
      <input id="context_id" name="context" type="hidden" model="Context" value="{{firstnonempty instance.context.id object_params.context}}">
      <input id="is_declining_review" name="is_declining_review" type="hidden" value="{{firstnonempty instance.is_declining_review object_params.is_declining_review}}">
      <label for="program_description">
        Comment
        <span class="required">*</span>
        <i class="fa fa-question-circle" rel="tooltip" title="Commentary goes here"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Comments" tabindex="2" autofocus>{{instance.description}}</textarea>
      </div>
    </div>
  </div>
</form>
