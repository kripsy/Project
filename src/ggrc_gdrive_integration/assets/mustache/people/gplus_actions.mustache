  {{#google_plus person}}
    <div class="profile-contact">
      <ul>
        <li>
          <a rel="tooltip" data-original-title="Start a video call" href="javascript://"><i class="fa fa-video-camera"></i></a>
        </li>
        <li>
          <a rel="tooltip" data-original-title="Chat with this contact" href="javascript://"><i class="fa fa-comment-o"></i></a>
        </li>
        <li>
          <a rel="tooltip" data-original-title="Email this contact" href="javascript://"><i class="fa fa-envelope"></i></a>
        </li>
        <li>
          <a rel="tooltip" data-original-title="Phone call" href="javascript://"><i class="fa fa-phone"></i></a>
        </li>
        <li class="circle-holder">
          <a class="btn btn-mini square-trigger" href="javascript://">Add to Circles <i class="fa fa-caret-down"></i></a>
          <div class="square-popover">
            <ul>
              {{#circles}}
              <li>
                <label>
                  <input type="checkbox">
                  {{displayName}} <span>{{people.totalItems}}</span>
                </label>
              </li>
              {{/circles}}
              <li class="create">
                <a href="javascript://">Create new circle</a>
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  {{/google_plus}}
