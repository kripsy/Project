{{! upload evidence to GDrive by clicking this button}}
<div style="clear:both">

<div>
  <br>
  {{#is_allowed "create" 'ObjectDocument' context=instance.context.id}}
    <ggrc-gdrive-folder-picker deferred="true" instance="instance" no_detach="true"/>
  {{/is_allowed}}
</div>
{{#if_helpers '\
  #is_allowed' "create" 'ObjectDocument' _0_context=instance.context.id '\
    and ^if_equals' instance.status 'Accepted' '\
  or #is_allowed' '__GGRC_ADMIN__' 'Audit' _2_context=null}}
<div>
  <br>
  <ggrc-gdrive-picker-launcher instance="instance" deferred="true" click_event="trigger_upload_parent">
  </ggrc-gdrive-picker-launcher>
</div>
{{/if_helpers}}
</div>
